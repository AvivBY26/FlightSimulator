<Application x:Class="FlightSimulator.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:FlightSimulator"
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        
        <Style TargetType="lvc:CartesianChart" x:Key="EfficientGraph">
            <Setter Property="Grid.RowSpan" Value="2"/>
            <Setter Property="Hoverable" Value="False"/>
            <Setter Property="DataTooltip" Value="{x:Null}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="DisableAnimations" Value="True"/>
            <Setter Property="LegendLocation" Value="Top"/>
        </Style>

    </Application.Resources>
</Application>
