<Grid x:Class="FlightSimulator.View.JoyStick"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FlightSimulator.View"
      Background="White"
      mc:Ignorable="d" 
    
      d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <TextBox x:Name="t1" HorizontalAlignment="Left" Height="25" Margin="10,100,0,0" TextWrapping="Wrap" Text="{Binding VM_Alieron}" VerticalAlignment="Top" Width="120" Grid.ColumnSpan="2"/>
        <TextBox x:Name="t2" HorizontalAlignment="Left" Height="25" Margin="10,100,0,0" TextWrapping="Wrap" Text="{Binding VM_Elevator}" VerticalAlignment="Top" Width="120" Grid.ColumnSpan="2" RenderTransformOrigin="1.051,2.548"/>
        <TextBox x:Name="t3" HorizontalAlignment="Left" Height="25" Margin="10,100,0,0" TextWrapping="Wrap" Text="{Binding VM_Rudder}" VerticalAlignment="Top" Width="120" Grid.ColumnSpan="2"/>
        <TextBox x:Name="t4" HorizontalAlignment="Left" Height="25" Margin="10,100,0,0" TextWrapping="Wrap" Text="{Binding VM_Throttle}" VerticalAlignment="Top" Width="120" Grid.ColumnSpan="2" RenderTransformOrigin="0.913,2.033"/>
        <Ellipse Fill="Gray" HorizontalAlignment="Left" Height="138" Margin="484,74,0,0" Stroke="Black" VerticalAlignment="Top" Width="143" RenderTransformOrigin="1.694,0.496"/>
        <Ellipse Fill="Black" HorizontalAlignment="Left" Height="61" Stroke="Black" VerticalAlignment="Top" Width="61" Margin="525,114,0,0" RenderTransformOrigin="3.303,0.763"/>
        <Ellipse Fill="LightGray" HorizontalAlignment="Left" Height="31" Margin="539,127,0,0" Stroke="Black" VerticalAlignment="Top" Width="31"/>
        <TextBlock HorizontalAlignment="Left" Height="17" Margin="532,45,0,0" TextWrapping="Wrap" Text="Alieron" VerticalAlignment="Top" Width="54"/>
        <TextBlock HorizontalAlignment="Left" Height="17" Margin="639,132,0,0" TextWrapping="Wrap" Text="Elevator" VerticalAlignment="Top" Width="48" RenderTransformOrigin="0.5,0.5">
            <TextBlock.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="89.114"/>
                    <TranslateTransform/>
                </TransformGroup>
            </TextBlock.RenderTransform>
        </TextBlock>
        <TextBlock HorizontalAlignment="Left" Height="17" Margin="532,263,0,0" TextWrapping="Wrap" Text="Rudder" VerticalAlignment="Top" Width="54" RenderTransformOrigin="0.65,0.942"/>
        <TextBlock HorizontalAlignment="Left" Height="17" Margin="388,144,0,0" TextWrapping="Wrap" Text="Throttle" VerticalAlignment="Top" Width="54" RenderTransformOrigin="0.5,0.5">
            <TextBlock.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="89.349"/>
                    <TranslateTransform/>
                </TransformGroup>
            </TextBlock.RenderTransform>
        </TextBlock>
        <Rectangle Fill="LightBlue" HorizontalAlignment="Left" Height="28" Margin="474,230,0,0" Stroke="Black" VerticalAlignment="Top" Width="162" RenderTransformOrigin="0.62,0.586"/>
        <Rectangle Fill="LightBlue" HorizontalAlignment="Left" Height="28" Margin="346,148,0,0" Stroke="Black" VerticalAlignment="Top" Width="162" RenderTransformOrigin="0.62,0.586">
            <Rectangle.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="89.656"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Rectangle.RenderTransform>
        </Rectangle>
        <Rectangle Fill="Black" HorizontalAlignment="Left" Height="28" Margin="539,230,0,0" Stroke="Black" VerticalAlignment="Top" Width="31"/>
        <Rectangle Fill="Black" HorizontalAlignment="Left" Height="28" Margin="435,130,0,0" Stroke="Black" VerticalAlignment="Top" Width="28" RenderTransformOrigin="3.628,1.124"/>
    </Grid>
</Grid>
